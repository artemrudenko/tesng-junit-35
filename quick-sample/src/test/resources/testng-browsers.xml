<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="BrowserParams" verbose="1">
  <test name="ChromeTest">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="by.stqa.pft.quick.SeleniumAssertionTest"/>
    </classes>
  </test>
  <test name="FFTest">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="by.stqa.pft.quick.SeleniumAssertionTest"/>
    </classes>
  </test>
  <test name="IETest">
    <parameter name="browser" value="ie"/>
    <classes>
      <class name="by.stqa.pft.quick.SeleniumAssertionTest"/>
    </classes>
  </test>
</suite>
